/*==============================
	Header
==============================*/
.header
	position fixed
	width 100%
	top 0
	z-index 9
	background-color transparent
	padding-top 15px
	&__basket
		display inline-block
		color $black
		text-decoration none
		position absolute
		right 15px
		top 50%
		transform(translateY(-50%))
		font-size 14px
		&:hover
			color $black
			text-decoration underline                                 
		&--none
			display none
	&__btn
		width 20px
		height 16px
		position absolute
		z-index 10
		transform(rotate(0deg))
		transition(.5s ease-in-out)
		cursor pointer
		top 17px
		left 15px
		span
			display block
			position absolute
			height 1px
			width 20px
			background $black
			opacity 1
			left 0
			transform(rotate(0deg))
			transition(.25s ease-in-out)
			top 3px
			&:nth-child(1)
				top 9px	
		&.open
			span
				top 6px
				transform(rotate(135deg))
			span:nth-child(2)
				top 6px
				transform(rotate(-135deg))
	&__logo
		display block
		width 144px
		height 47px
		margin 0 auto
		opacity 1
		transition(.3s)
		img
			&:first-child
				display block
			&:last-child
				display none
		&--none
			display none
		&--active
			opacity 0
	&__nav
		margin 0
		position fixed
		display flex
		flex-direction column
		justify-content center
		align-items flex-start
		width 280px
		top 0px
		bottom 0px
		left 0px
		background-color $white
		transition(.3s ease-in-out)
		transform(translate3d(-280px, 0, 0))
		padding-left 50px
		z-index 9
		li
			display block
			margin-bottom 15px
			&:last-child
				margin-bottom 0
		a
			display inline-block
			color $black
			font-size 16px
			text-decoration none
		&--active
			transform(translate3d(0, 0, 0))
	&__drop
		display none
		padding 30px 0px 15px 70px
		li
			margin-bottom 10px
			&:last-child
				margin-bottom 0
		a
			display block
			font-size 14px
			font-family 'roboto-light'
			color rgba($black, .7)
			&:hover
				color $black
	&--white
		.header__btn
			span
				background $white
			&.open
				span
					background $black
		.header__logo
			img
				&:first-child
					display none
				&:last-child
